@model Railway_Group01.Models.ViewModels.RailwayIndexModel
@{
    ViewData["Title"] = "TrainSeatAvailability";
    Layout = "~/Views/Shared/_LayoutofTuong.cshtml";
    var now = DateTime.Now;
}

<div class="bg-gradient-cus">
    <h3 class="text-center my-5 text-light">Check Seat Availability</h3>
    <div class="form-fields mb-5 ">
        <form class="row g-1 ui form w-100 mx-auto" method="get" asp-action="Search">
            <div class="col-sm-3 col-4 field mx-auto me-0">
                <label for="gaDi" class="form-label text-white-50 fw-500" style="font-size:12px">From</label>
                <select id="gaDi" class="form-select" name="From" asp-items="@Model.SelectListItems"
                        style="border-bottom:solid 1px white; border-top:0; border-left:0; border-right:0;" required></select>
            </div>
            <div class="col-sm-3 col-4">
                <label for="gaDen" class="form-label text-white-50 fw-500" style="font-size:12px">To</label>
                <select id="gaDen" class="form-select" name="To" asp-items="@Model.SelectListItems"
                        style="border-bottom:solid 1px white; border-top:0; border-left:0; border-right:0" required></select>
            </div>
            <div class="col-sm-3 col-4">
                <label for="ngayXP" class="form-label text-white-50 fw-500" style="font-size:12px">Date</label>
                <input type="date" class="form-control" id="ngayXP" asp-for="@Model.StartDate" value="@now" asp-format="{0:MM/dd/yyyy}"
                       style="border-bottom:solid 1px white; border-top:0; border-left:0; border-right:0;" />
            </div>
            <div class="d-flex flex-row justify-content-center align-items-end col-sm-3 col-3 mx-auto ms-0">
                <button type="submit" class=" text-uppercase btn btn-orange w-100">
                    Search
                </button>
            </div>
        </form>
    </div>
</div>


