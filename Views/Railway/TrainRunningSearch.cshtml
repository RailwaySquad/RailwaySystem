
@{
    ViewData["Title"] = "TrainRunningSearch";
    Layout = "~/Views/Shared/_LayoutofTuong.cshtml";
}

<div class="bg-gradient-cus">
    <h3 class="text-center my-5 text-light">Check Train Running</h3>
    <div class="form-fields mb-5 ">
        <form class="row g-1 ui form w-100 mx-auto" method="get" asp-action="SearchTrain">
            <div class="col-sm-4 col-6  field mx-auto me-0">
                <label for="traincode" class="form-label text-white-50 fw-500" style="font-size:12px">Search Train</label>
                <select id="traincode" class="form-select" name="TrainCode" asp-items="ViewBag.TrainSelectList"
                        style="border-bottom:solid 1px white; border-top:0; border-left:0; border-right:0;" required></select>
            </div>
            <div class="d-flex flex-row justify-content-center align-items-end col-sm-3 col-3 mx-auto ms-0">
                <button type="submit" class=" text-uppercase btn btn-orange w-100">
                    Search
                </button>
            </div>
        </form>
    </div>
</div>