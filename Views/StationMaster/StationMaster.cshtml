					<!-- card -->
					<div class="card h-100 card-lg">
						<div class="px-6 py-6">
							<div class="row justify-content-between">
								<!-- form -->
								<div class="col-lg-4 col-md-6 col-12 mb-2 mb-lg-0">
									<form class="d-flex" asp-action="SearchStation" method="get">
										<input class="form-control" name="name" type="text" placeholder="Search Stations" aria-label="Search" />
										<button type="submit" class="searchButton"><i class="fas fa-search"></i></button>
									</form>
								</div>
								<!-- select option -->
								<div class="col-lg-2 col-md-4 col-12">
									
								</div>
							</div>
						</div>
						@if (TempData["SuccessMessage"] != null)
						{
							<script>
								alert('@TempData["SuccessMessage"]');
							</script>
						}
						<!-- card body -->
						<div class="card-body p-0">
							<!-- table -->
							<div class="table-responsive">
								<table class="table table-centered table-hover text-nowrap table-borderless mb-0 table-with-checkbox">
									<thead class="bg-light">
										<tr>
											<th class="colerth">No</th>
											<th class="colerth">Station Code</th>
											<th class="colerth">Station Name</th>
											<th class="colerth">NameOfDivision</th>
											<th class="colerth">Zone</th>
											<th class="colerth">ZipCode</th>
											<th class="colerth">Action</th>
										</tr>
									</thead>
									<tbody>
										@foreach(var item in Model)
										{
											<tr>
												<td>
													@counter
												</td>
												<td>@item.Code</td>
												<td>@item.Name</td>
												<td>@item.NameOfDivision</td>
												<td>@item.Zone</td>
												<td>@item.ZipCode</td>

												<td>
													<div class="dropdown">
														<a href="#" class="text-reset" data-bs-toggle="dropdown" aria-expanded="false">
															<i class="bi bi-three-dots-vertical"></i>
														</a>
														<ul class="dropdown-menu">
															<li>
																<form asp-action="DeleteStation" asp-route-id="@item.Id" onsubmit="return confirmDelete()">
																	<button class="dropdown-item" type="submit">
																		<i class="bi bi-trash me-3"></i>
																		Delete
																	</button>
																</form>
															</li>
															<li>
																<a class="dropdown-item" href="@Url.Action("EditStation", new {id = item.Id})">
																	<i class="bi bi-pencil-square me-3"></i>
																	Edit
																</a>
															</li>
														</ul>
													</div>
												</td>
											</tr>
											counter++;
										}
									</tbody>
								</table>
							</div>
						</div>
						<div class="border-top d-md-flex justify-content-between align-items-center px-6 py-6">
							<span> @Model.Count() Items</span>
							<nav class="mt-2 mt-md-0">
								<ul class="pagination mb-0">

									<nav aria-label="Page navigation">
										<ul class="pagination">
											@if (hasPreviousPage)
											{
												<li class="page-item">
													<a class="page-link" href="@Url.Action("StationMaster", new { page = page - 1, pageSize = pageSize })" aria-label="Previous">
														<span aria-hidden="true">&laquo;</span>
													</a>
												</li>
											}

											@for (int i = startPage; i <= endPage; i++)
											{
												<li class="page-item @(i == page ? "active" : "")">
													<a class="page-link" href="@Url.Action("StationMaster", new { page = i, pageSize = pageSize })">@i</a>
												</li>
											}

											@if (hasNextPage)
											{
												<li class="page-item">
													<a class="page-link" href="@Url.Action("StationMaster", new { page = page + 1, pageSize = pageSize })" aria-label="Next">
														<span aria-hidden="true">&raquo;</span>
													</a>
												</li>
											}
										</ul>
									</nav>
								</ul>
							</nav>
						</div>
					</div>
				</div>
			</div>
